	<license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
	<authorEmail>neil.clifton@cliftonwebfoundry.com.au</authorEmail>
	<authorUrl>http://cliftonwebfoundry.com.au</authorUrl>
	<version>1.4.3</version>
	<description>COM_REAXMLIMPORT_XML_DESCRIPTION</description>

	<scriptfile>installscript.php</scriptfile>

	<files folder="site">
		<filename>reaxmlimport.php</filename>
		<filename>index.html</filename>
		<filename>gpl-3.0.txt</filename>
		<folder>controllers</folder>
		<folder>views</folder>
		<folder>models</folder>
		<folder>language</folder>
		<folder>assets</folder>
		<folder>helpers</folder>
	</files>
	
	<administration>
		<!-- Administration Menu Section -->
		<menu>COM_REAXMLIMPORT_MENU</menu>
		<!-- Administration Main File Copy Section -->
		<!-- Note the folder attribute: This attribute describes the folder to 
			copy FROM in the package to install therefore files copied in this section 
			are copied from /admin/ in the package -->

		<files folder="admin">
			<!-- Admin Main File Copy Section -->
			<folder>controllers</folder>
			<folder>language</folder>
			<folder>models</folder>
			<folder>views</folder>
			<folder>helpers</folder>
			<folder>assets</folder>
			<folder>cli</folder>
			<filename>gpl-3.0.txt</filename>
			<filename>config.xml</filename>
			<filename>access.xml</filename>
			<filename>index.html</filename>
			<filename>reaxmlimport.php</filename>
		</files>
		<languages folder="admin">
			<language tag="en-GB">language/en-GB/en-GB.com_reaxmlimport.ini
			</language>
			<language tag="en-GB">language/en-GB/en-GB.com_reaxmlimport.sys.ini
			</language>

		</languages>

	</administration>



</extension>
